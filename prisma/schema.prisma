generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  hasedPassword String
  cratedAt      DateTime @default(now())
  updatedAt     DateTime @updatedAt
  tasks         Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  isDone      Boolean
  cratedAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}